Algoritmo AreaTriangulo
	definir numeroBase como Real; 
	definir numeroAltura como Real;
	definir resultado como Real;
	Escribir "Introduce un número para la base";
	Leer numeroBase;
	Escribir "Introduce un número para la altura";
	Leer numeroAltura;
	resultado <- (numeroBase * numeroAltura) / 2.0;
	Escribir "El área del triangulo es ", resultado;
FinAlgoritmo
